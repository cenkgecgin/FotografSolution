@model IEnumerable<FotograflarCesit>


<a class="btn btn-primary" asp-controller="FotograflarCesit" asp-action="Create"> FotograflarCesit</a>
<table class="table table-hover">
    <thead>
        <tr>

            <td>@Html.DisplayNameFor(p=>p.Id)</td>
            <td>@Html.DisplayNameFor(p=>p.CesidAdi)</td>
            <td>@Html.DisplayNameFor(p=>p.Images)</td>
            <td>@Html.DisplayNameFor(p=>p.Acıklama)</td>


            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CesidAdi</td>
                <td>@item.Images</td>
                <td>@item.Acıklama</td>


                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="FotograflarCesit" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-info" asp-action="Update" asp-controller="FotograflarCesit" asp-route-id="@item.Id">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>

</table>

